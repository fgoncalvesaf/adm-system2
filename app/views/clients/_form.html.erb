<%= form_for @client, :html => { :class => "form-horizontal client" } do |f| %>

  <% if @client.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @client.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :birthday, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :birthday %>
    </div>
    <%=f.error_span(:birthday) %>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>

  <%= f.fields_for :address do |ff| %>

    <div class="form-group">
      <%= ff.label :address, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= ff.text_field :address, :class => 'form-control' %>
      </div>
      <%=ff.error_span(:address) %>
    </div>
    <div class="form-group">
      <%= ff.label :complement, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= ff.text_field :complement, :class => 'form-control' %>
      </div>
      <%=ff.error_span(:complement) %>
    </div>
    <div class="form-group">
      <%= ff.label :zip_code, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= ff.text_field :zip_code, :class => 'form-control' %>
      </div>
      <%=ff.error_span(:zip_code) %>
    </div>
    <div class="form-group">
      <%= ff.label :city, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= ff.text_field :city, :class => 'form-control' %>
      </div>
      <%=ff.error_span(:city) %>
    </div>
    <div class="form-group">
      <%= ff.label :state, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= ff.text_field :state, :class => 'form-control' %>
      </div>
      <%=ff.error_span(:state) %>
    </div>
    <div class="form-group">
      <%= ff.label :country, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= ff.text_field :country, :class => 'form-control' %>
      </div>
      <%=ff.error_span(:country) %>
    </div>

  <% end %>

  <div class="form-group">
    <%= f.label :notes, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :notes, :class => 'form-control' %>
    </div>
    <%=f.error_span(:notes) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
