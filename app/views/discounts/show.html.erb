<%- model_class = Discount -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @discount.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kind) %>:</strong></dt>
  <dd><%= @discount.kind %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <% if @discount.kind == 'percentage' %>
    <dd><%= number_with_precision(@discount.value, precision: 0) %></dd>
  <% else %>
    <dd><%= number_with_precision(@discount.value, precision: 2) %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @discount.created_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @discount.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              discounts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_discount_path(@discount), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              discount_path(@discount),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
