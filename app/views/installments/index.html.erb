<p id="notice"><%= notice %></p>

<h1>Installments</h1>

<table>
  <thead>
    <tr>
      <th>Sale</th>
      <th>Payment date</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @installments.each do |installment| %>
      <tr>
        <td><%= installment.sale.id %></td>
        <td><%= installment.payment_date %></td>
        <td><%= number_with_precision(installment.value, precision: 2) %></td>
        <td><%= link_to 'Show', installment %></td>
        <td><%= link_to 'Edit', edit_installment_path(installment) %></td>
        <td><%= link_to 'Destroy', installment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Installment', new_installment_path %>
