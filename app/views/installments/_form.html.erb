<%= form_for @installment, :html => { :class => "form-horizontal installment" } do |f| %>

  <% if @installment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@installment.errors.count, "error") %> prohibited this installment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @installment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :sale_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:sale_id, Sale.all.collect { |s|
    [s.id, s.id] }, {include_blank: 'Selecione...'}, {class: "form-control"}) %>
    </div>
    <%=f.error_span(:sale_id) %>
  </div>
  <div class="form-group">
    <%= f.label :payment_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :payment_date %>
    </div>
    <%=f.error_span(:payment_date) %>
  </div>
  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%=f.error_span(:value) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                installments_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
