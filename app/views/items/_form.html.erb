<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_id %>
    <%= f.select(:product_id, Product.all.collect { |p|
    [p.name, p.id] }, {include_blank: 'Selecione...'}) %>
  </div>

  <div class="field">
    <%= f.label :sale_id %>
    <%= f.select(:sale_id, Sale.all.collect { |s|
    [s.name, s.id] }, {include_blank: 'Selecione...'}) %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, min: 1 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
