<%= form_for @sale, :html => { :class => "form-horizontal sale" } do |f| %>

  <% if @sale.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sale.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :client_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:client_id, Client.all.collect { |c|
    [c.name, c.id] }, {include_blank: 'Selecione...'}, {class: "form-control"}) %>
    </div>
    <%=f.error_span(:client_id) %>
  </div>
  <div class="form-group">
    <%= f.label :sale_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :sale_date %>
    </div>
    <%=f.error_span(:sale_date) %>
  </div>
  <div class="form-group">
    <%= f.label :total, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :total, :class => 'form-control' %>
    </div>
    <%=f.error_span(:total) %>
  </div>
  <div class="form-group">
    <%= f.label :remaining, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :remaining, :class => 'form-control' %>
    </div>
    <%=f.error_span(:remaining) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  <div class="form-group">
    <%= f.label :discount_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:discount_id, Discount.all.collect { |d|
    [d.name, d.id] }, {include_blank: 'Selecione...'}, {class: "form-control"}) %>
    </div>
    <%=f.error_span(:discount_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sales_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
