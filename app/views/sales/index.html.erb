<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Sale date</th>
      <th>Total</th>
      <th>Remaining</th>
      <th>Status</th>
      <th>Discount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <% if sale.discount.blank? %>
        <tr>
          <td><%= sale.client.name %></td>
          <td><%= sale.sale_date %></td>
          <td><%= sale.total %></td>
          <td><%= sale.remaining %></td>
          <td><%= sale.status %></td>
          <td><%= 'Sem Desconto' %></td>
          <td><%= link_to 'Show', sale %></td>
          <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
          <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% else %>
        <tr>
          <td><%= sale.client.name %></td>
          <td><%= sale.sale_date %></td>
          <td><%= sale.total %></td>
          <td><%= sale.remaining %></td>
          <td><%= sale.status %></td>
          <td><%= sale.discount.name %></td>
          <td><%= link_to 'Show', sale %></td>
          <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
          <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

